<trigger>
    <name>When button 4 is pressed on remote controller</name>
    <description>when button 4 is pressed on remote controller</description>
    <channel>app.event.sensor.protocol.read.remote-controller</channel>
    <payload>
        <payload>
            <it.freedomotic.reactions.Statement>
                <logical>AND</logical>
                <attribute>protocol</attribute>
                <operand>EQUALS</operand>
                <value>remote-controller</value>
            </it.freedomotic.reactions.Statement>
            <it.freedomotic.reactions.Statement>
                <logical>AND</logical>
                <attribute>@event.button.pressed</attribute>
                <operand>EQUALS</operand>
                <value>4</value>
            </it.freedomotic.reactions.Statement>
        </payload>
    </payload>
    <hardwareLevel>false</hardwareLevel>
    <delay>0</delay>
    <priority>0</priority>
    <maxExecutions>-1</maxExecutions>
    <numberOfExecutions>0</numberOfExecutions>
    <suspensionTime>0</suspensionTime>
</trigger>
