
<trigger>
    <name>Arduino WeatherShield reads temperature change</name>
    <description>Arduino WeatherShield reads temperature change</description>
    <channel>app.event.sensor.protocol.read</channel>
    <payload>
        <payload>
            <it.freedom.reactions.Statement>
                <logical>AND</logical>
                <attribute>protocol</attribute>
                <operand>EQUALS</operand>
                <value>ArduinoWeatherShield</value>
            </it.freedom.reactions.Statement>
            <it.freedom.reactions.Statement>
                <logical>SET</logical>
                <attribute>behaviorValue</attribute>
                <operand>EQUALS</operand>
                <value>@event.temperature</value>
            </it.freedom.reactions.Statement>
        </payload>
    </payload>
    <hardwareLevel>true</hardwareLevel>
    <delay>0</delay>
    <priority>0</priority>
    <maxExecutions>-1</maxExecutions>
    <numberOfExecutions>0</numberOfExecutions>
    <suspensionTime>0</suspensionTime>
</trigger>