<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>it.freedomotic</groupId>
        <artifactId>freedomotic</artifactId>
        <version>5.5-SNAPSHOT</version>
        <relativePath>../../</relativePath>
    </parent>    
    <modelVersion>4.0.0</modelVersion>
    <artifactId>freedomotic-core</artifactId>
    <name>freedomotic-core</name>
    <packaging>jar</packaging>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <freedomotic.basedir>${project.parent.basedir}</freedomotic.basedir>
        <org.restlet.version>2.1.2</org.restlet.version>
        <restapi.version>3.0</restapi.version>
    </properties>
    <build>
        <finalName>freedomotic</finalName> 
        <plugins>
            <!-- Creates a manifest file to make the jar executable -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.4</version>
                <configuration>
                    <outputDirectory>${project.build.directory}/${project.artifactId}</outputDirectory>
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                            <classpathPrefix>lib/</classpathPrefix>
                            <mainClass>it.freedomotic.app.Freedomotic</mainClass>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.8</version>
                <executions>
                    <execution>
                        <id>copy-dependencies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/${project.artifactId}/lib</outputDirectory>
                            <excludeTransitive>false</excludeTransitive>
                            <overWriteReleases>false</overWriteReleases>
                            <overWriteSnapshots>false</overWriteSnapshots>
                            <overWriteIfNewer>true</overWriteIfNewer>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!-- Creates a freedomotic release -->
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.3</version>
                <inherited>false</inherited>
                <dependencies>
                    <dependency>
                        <groupId>ant-contrib</groupId>
                        <artifactId>ant-contrib</artifactId>
                        <version>20020829</version>
                    </dependency>
                    <dependency>
                        <groupId>ant</groupId>
                        <artifactId>ant-nodeps</artifactId>
                        <version>1.6.5</version>
                    </dependency>
                </dependencies>
                <executions>
                    <execution>
                        <id>create-freedomotic-release</id>
                        <phase>deploy</phase> <!-- Invoke only manually -->
                        <configuration>
                            <tasks>
                                <taskdef resource="net/sf/antcontrib/antcontrib.properties" />
                                <ant antfile = "${freedomotic.basedir}/scripts/create-release.xml"/>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals> 
                    </execution> 
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>2.9.1</version>
                <executions>
                    <execution>
                        <id>attach-javadocs</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <phase>deploy</phase>
                    </execution>
                </executions>
            </plugin>
            <!-- jdeb -->
            <plugin>
                <artifactId>jdeb</artifactId>
                <groupId>org.vafer</groupId>
                <version>1.0.1</version>
                <executions>
                    <execution>
                        <phase>install</phase>
                        <goals>
                            <goal>jdeb</goal>
                        </goals>
                        <configuration>
                            <verbose>true</verbose>
                            <deb>${freedomotic.basedir}/target/freedomotic_${version}.deb</deb>
                            <controlDir>${freedomotic.basedir}/scripts/debian/control/</controlDir>
                            <dataSet>
                                <data>
                                    <src>${freedomotic.basedir}/data-example</src>
                                    <type>directory</type>    
                                    <excludes>**/*~</excludes>    
                                    <mapper>
                                        <type>perm</type>
                                        <prefix>/var/lib/freedomotic</prefix>
                                        <user>freedomotic</user>
                                        <group>freedomotic</group>
                                        <filemode>775</filemode>
                                    </mapper>
                                </data>
                                <data>
                                    <src>plugins</src>
                                    <type>directory</type>
                                    <excludes>**/*~</excludes>    
                                    <mapper>
                                        <type>perm</type>
                                        <prefix>/usr/share/freedomotic/plugins</prefix>
                                        <user>freedomotic</user>
                                        <group>freedomotic</group>
                                        <filemode>775</filemode>
                                    </mapper>
                                </data>
                                <data>
                                    <src>target/lib</src>
                                    <type>directory</type>    
                                    <mapper>
                                        <type>perm</type>
                                        <prefix>/usr/share/freedomotic/lib</prefix>
                                        <user>freedomotic</user>
                                        <group>freedomotic</group>
                                    </mapper>
                                </data>
                                <data>
                                    <src>config</src>
                                    <type>directory</type>    
                                    <excludes>**/*~,serial/**</excludes>    
                                    <mapper>
                                        <type>perm</type>
                                        <prefix>/etc/freedomotic</prefix>
                                        <user>freedomotic</user>
                                        <group>freedomotic</group>
                                        <filemode>664</filemode>
                                    </mapper>
                                </data>
                                <data>
                                    <src>i18n</src>
                                    <type>directory</type>    
                                    <excludes>**/*~</excludes>    
                                    <mapper>
                                        <type>perm</type>
                                        <prefix>/usr/share/freedomotic/i18n</prefix>
                                        <user>freedomotic</user>
                                        <group>freedomotic</group>
                                    </mapper>
                                </data>
                                <data>
                                    <src>target/${project.artifactId}/freedomotic.jar</src>
                                    <type>file</type>    
                                    <mapper>
                                        <type>perm</type>
                                        <prefix>/usr/share/freedomotic</prefix>
                                        <user>freedomotic</user>
                                        <group>freedomotic</group>
                                    </mapper>
                                </data>
                                <data>
                                    <src>${freedomotic.basedir}/scripts/debian/freedomotic.default</src>
                                    <type>file</type>   
                                    <dst>etc/default/freedomotic</dst>
                                    <mapper>
                                        <type>perm</type>
                                        <filemode>644</filemode>
                                    </mapper>
                                </data>
                                <data>
                                    <src>${freedomotic.basedir}/scripts/debian/init.d</src>
                                    <type>file</type>   
                                    <dst>etc/init.d/freedomotic</dst>
                                    <mapper>
                                        <type>perm</type>
                                        <filemode>755</filemode>
                                    </mapper>
                                </data>
                                <data>
                                    <src>${freedomotic.basedir}/scripts/shared/freedomotic.sh</src>
                                    <type>file</type>    
                                    <mapper>
                                        <type>perm</type>
                                        <prefix>/usr/share/freedomotic</prefix>
                                        <user>freedomotic</user>
                                        <group>freedomotic</group>
                                        <filemode>755</filemode>
                                    </mapper>
                                </data>                               
                                <data>
                                    <src>${freedomotic.basedir}/scripts/shared/freedomotic-icon.png</src>
                                    <type>file</type>    
                                    <mapper>
                                        <type>perm</type>
                                        <prefix>/usr/share/pixmaps</prefix>
                                        <user>freedomotic</user>
                                        <group>freedomotic</group>
                                    </mapper>
                                </data> 
                                <data>
                                    <src>${freedomotic.basedir}/scripts/shared/freedomotic.desktop</src>
                                    <type>file</type>    
                                    <mapper>
                                        <type>perm</type>
                                        <prefix>/usr/share/applications</prefix>
                                        <user>freedomotic</user>
                                        <group>freedomotic</group>
                                    </mapper>
                                </data> 
                                <data>
                                    <src>${freedomotic.basedir}/scripts/debian/copyright</src>
                                    <type>file</type>    
                                    <mapper>
                                        <type>perm</type>
                                        <prefix>/usr/share/doc/freedomotic</prefix>
                                    </mapper>
                                </data>
                                <data>
                                    <src>${freedomotic.basedir}/scripts/debian/changelog.gz</src>
                                    <type>file</type>    
                                    <mapper>
                                        <type>perm</type>
                                        <prefix>/usr/share/doc/freedomotic</prefix>
                                    </mapper>
                                </data>
                                <data>
                                    <type>template</type>
                                    <paths>
                                        <path>/etc/freedomotic</path> -->
                                        <path>/var/lib/freedomotic</path>
                                        <path>/var/log/freedomotic</path>
                                        <path>/usr/share/freedomotic</path>
                                    </paths>
                                </data>
                                <data>
                                    <type>link</type>
                                    <linkName>/usr/bin/freedomotic</linkName>
                                    <linkTarget>/usr/share/freedomotic/freedomotic.sh</linkTarget>
                                    <symlink>true</symlink>
                                </data>
                                <data>
                                    <type>link</type>
                                    <linkName>/usr/share/freedomotic/config</linkName>
                                    <linkTarget>/etc/freedomotic</linkTarget>
                                    <symlink>true</symlink>
                                </data>
                                <data>
                                    <type>link</type>
                                    <linkName>/usr/share/freedomotic/data</linkName>
                                    <linkTarget>/var/lib/freedomotic</linkTarget>
                                    <symlink>true</symlink>
                                </data>
                                <data>
                                    <type>link</type>
                                    <linkName>/usr/share/freedomotic/log</linkName>
                                    <linkTarget>/var/log/freedomotic</linkTarget>
                                    <symlink>true</symlink>
                                </data>       
                            </dataSet>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>jul-to-slf4j</artifactId>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>freedomotic-model</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>freedomotic-restapi-interfaces</artifactId>
            <version>3.0</version>
        </dependency>
        <dependency>
            <groupId>org.apache.activemq</groupId>
            <artifactId>activemq-all</artifactId>
            <version>5.7.0</version>
        </dependency>
        <dependency>
            <groupId>org.eclipse.jetty.aggregate</groupId>
            <artifactId>jetty-all-server</artifactId>
            <version>7.6.10.v20130312</version>
        </dependency>
        <dependency>
            <groupId>com.thoughtworks.xstream</groupId>
            <artifactId>xstream</artifactId>
            <version>1.4.4</version>
        </dependency>
        <dependency>
            <groupId>org.rxtx</groupId>
            <artifactId>rxtx</artifactId>
            <version>2.1.7</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>com.google.inject</groupId>
            <artifactId>guice</artifactId>
            <version>3.0</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>com.google.inject.extensions</groupId>
            <artifactId>guice-assistedinject</artifactId>
            <version>3.0</version>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-context</artifactId>
            <version>3.0.2.RELEASE</version>
        </dependency>
        <dependency>
            <groupId>org.apache.shiro</groupId>
            <artifactId>shiro-core</artifactId>
            <version>1.2.2</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>org.apache.shiro</groupId>
            <artifactId>shiro-guice</artifactId>
            <version>1.2.2</version>
            <type>jar</type>
        </dependency>
    </dependencies>
</project>
